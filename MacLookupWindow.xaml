<Window x:Class="ProjectAnatolia.MacLookupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MAC Lookup" Height="250" Width="350" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <ComboBox Name="cmbNetworkAdapters" Width="250" Margin="5" />
            <Button Content="Get MAC Address" Margin="5" Click="GetMac_Click"/>
            <TextBlock Name="txtMacResult" Margin="10,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
