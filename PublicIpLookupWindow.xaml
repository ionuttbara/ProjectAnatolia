<Window x:Class="ProjectAnatolia.PublicIpLookupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Public IP Lookup" Height="200" Width="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Lookup Public IP" Margin="5" Click="LookupPublicIP_Click"/>
            <TextBlock Name="txtPublicIPResult" Margin="10,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
