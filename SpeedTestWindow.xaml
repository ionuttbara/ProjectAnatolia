<Window x:Class="ProjectAnatolia.SpeedTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Speed Test" Height="200" Width="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Run Speed Test" Margin="5" Click="RunSpeedTest_Click"/>
            <TextBlock Name="txtSpeedTestResult" Margin="10,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
